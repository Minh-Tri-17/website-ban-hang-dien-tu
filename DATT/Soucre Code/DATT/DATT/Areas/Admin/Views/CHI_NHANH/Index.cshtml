@model IEnumerable<DATT.DAL.CHI_NHANH>

@{
    ViewBag.Title = "Quản lý chi nhánh";
    ViewBag.section = "manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <a href="@Url.Action("Create", "CHI_NHANH")"><i class="fa-solid fa-plus"></i> Thêm</a>
</p>
<table class="table">
    <tr>
        <th>
           Tên chi nhánh
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
           Số điện thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TEN_CHI_NHANH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIA_CHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            <a href="@Url.Action("Edit", "CHI_NHANH", new { id = item.ID_CN })"><i class="fa-solid fa-pen"></i></a>
            <a href="@Url.Action("Details", "CHI_NHANH", new { id = item.ID_CN })"><i class="fa-solid fa-circle-info"></i></a>
            <a href="@Url.Action("Delete", "CHI_NHANH", new { id = item.ID_CN })"><i class="fa-solid fa-trash"></i></a>
        </td>
    </tr>
}

</table>
