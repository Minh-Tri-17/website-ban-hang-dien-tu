@model IEnumerable<DATT.DAL.KHACH_HANG>

@{
    ViewBag.Title = "Quản lý khách hàng";
    ViewBag.section = "manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<table class="table">
    <tr>
        <th>
           Tên khách hàng
        </th>
        <th>
           Địa chỉ
        </th>
        <th>
           Số điện thoại
        </th>
        <th>
           Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TEN_KHACH_HANG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DIA_CHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            <a href="@Url.Action("Details", "KHACH_HANG", new { id = item.ID_KH })"><i class="fa-solid fa-circle-info"></i></a>          
        </td>
    </tr>
}
</table>
